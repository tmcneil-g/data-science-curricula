# Generate caterpillar-style plot of sub-area scores for NASEM Area "Workflow and reproducibility"

# Read in data
reproducible_scores <- read.csv(file = "data/reproducible_long.csv")

# Update description with linebreaks to conserve horizontal space in plot
reproducible_scores$Subarea <- stringr::str_wrap(string = reproducible_scores$Subarea, 
                                                 width = 20)
reproducible_catplot <- ggplot(data = reproducible_scores, mapping = aes(y = Subarea)) +
  geom_errorbar(mapping = aes(xmin = Mean_Score - (2 * Se_Score),
                              xmax = Mean_Score + (2 * Se_Score)),
                width = 0.0) +
  geom_point(mapping = aes(x = Score, y = Subarea),
             shape = 21,
             fill = "black",
             alpha = 0.25,
             size = 1) + 
  geom_point(mapping = aes(x = Mean_Score, y = Subarea),
             shape = 21,
             fill = "white",
             size = 2.5) + 
  theme_bw() +
  labs(x = "Score",
       y = "Sub-Area")

ggsave(filename = "output/reproducible_1.png", 
       plot = reproducible_catplot,
       width = 10,
       height = 3,
       units = "cm")
