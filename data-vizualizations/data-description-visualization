# Generate caterpillar-style plot of sub-area scores for NASEM Area "Data description and visualization"

library("ggplot2")

# Read in data
data_description_scores <- read.csv(file = "data/data_description_long.csv")

# Update description with linebreaks to conserve horizontal space in plot
data_description_scores$Subarea <- stringr::str_wrap(string = data_description_scores$Subarea, 
                                                      width = 20)
data_description_catplot <- ggplot(data = data_description_scores, mapping = aes(y = Subarea)) +
  geom_errorbar(mapping = aes(xmin = Mean_Score - (2 * Se_Score),
                              xmax = Mean_Score + (2 * Se_Score)),
                width = 0.0) +
  geom_point(mapping = aes(x = Score, y = Subarea),
             shape = 21,
             fill = "black",
             alpha = 0.25,
             size = 1) + 
  geom_point(mapping = aes(x = Mean_Score, y = Subarea),
             shape = 21,
             fill = "white",
             size = 2.5) + 
  theme_bw() +
  labs(x = "Score",
       y = "Sub-Area")

ggsave(filename = "output/data_description.png", 
       plot = data_description_catplot,
       width = 10,
       height = 4,
       units = "cm")
